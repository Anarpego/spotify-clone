                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "description": "ID de la cancion a retornar",
                        "required": true,
                        "type": "string",
                        "example": "1",
                        "in": "path"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Si la peticion fue correcta y se encontro el valor",
                        "schema": {
                            "type": "object",
                            "example": {
                                "status": true,
                                "song": {
                                    "id": 7,
                                    "name": "mojado",
